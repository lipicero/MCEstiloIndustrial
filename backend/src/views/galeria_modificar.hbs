<div class="container" style=" margin-bottom: 3rem;">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card">
                <div class="card-body">
                    <div class="mb-4">
                        <h2>
                            <i class="fas fa-edit me-2" style="color: var(--accent-rust);"></i>
                            Modificar Imagen
                        </h2>
                        <p style="color: var(--text-muted); margin-bottom: 0;">Actualiza la información de la imagen</p>
                    </div>

                    {{#if error}}
                    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <div>{{message}}</div>
                    </div>
                    {{/if}}

                    <form action="/galeria/modificar" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="{{item.id}}">
                        <input type="hidden" name="file_original" value="{{item.file}}">
                        <input type="hidden" name="img_original" value="{{item.img_id}}">
                        
                        <div class="mb-4">
                            <label for="descripcion" class="form-label">
                                <i class="fas fa-align-left me-2"></i>Descripción
                            </label>
                            <input type="text" class="form-control" id="descripcion" name="descripcion" 
                                   value="{{item.descripcion}}" placeholder="Descripción de la imagen" required>
                        </div>

                        <div class="mb-4">
                            <label for="categoria" class="form-label">
                                <i class="fas fa-tags me-2"></i>Categoría
                            </label>
                            <select class="form-select" id="categoria" name="categoria" required>
                                <option value="muebles" {{#ifEquals item.categoria 'muebles'}}selected{{/ifEquals}}>Muebles</option>
                                <option value="portones" {{#ifEquals item.categoria 'portones'}}selected{{/ifEquals}}>Portones</option>
                                <option value="rejas" {{#ifEquals item.categoria 'rejas'}}selected{{/ifEquals}}>Rejas</option>
                                <option value="estructuras" {{#ifEquals item.categoria 'estructuras'}}selected{{/ifEquals}}>Estructuras</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="imagen" class="form-label">
                                <i class="fas fa-upload me-2"></i>Cambiar imagen
                            </label>
                            <input type="file" class="form-control" id="imagen" name="imagen" accept="image/*">
                            <small style="color: var(--text-muted); display: block; margin-top: 0.5rem;">
                                Deja en blanco si no deseas cambiar la imagen actual
                            </small>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="img_delete" 
                                       id="img_delete" value="1">
                                <label class="form-check-label" for="img_delete">
                                    <i class="fas fa-trash me-2" style="color: var(--btn-danger-bg);"></i>
                                    Eliminar imagen actual
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a href="/galeria" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
