<div class="container" style="margin-top:1.5rem; margin-bottom: 3rem;">
    {{!-- Título y botón nuevo --}}
    <div class="row mb-2 align-items-center">
        <div class="col-md-6">
            <h2>
                <i class="fas fa-images me-2" style="color: var(--accent-rust);"></i>
                Gestión de Galería
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="/galeria/agregar" class="btn btn-success">
                <i class="fa fa-plus"></i> Nueva Imagen
            </a>
        </div>
    </div>
    {{!-- fin título --}}

    {{!-- Tabla de galería --}}
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr class="text-center">
                            <th scope="col" style="width: 5%;">#</th>
                            <th scope="col" style="width: 25%;">Descripción</th>
                            <th scope="col" style="width: 15%;">Categoría</th>
                            <th scope="col" style="width: 10%;">Tipo</th>
                            <th scope="col" style="width: 15%;">Imagen</th>
                            <th scope="col" style="width: 15%;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each galeria}}
                        <tr>
                            <th class="align-middle text-center" scope="row">{{id}}</th>
                            <td class="align-middle">{{descripcion}}</td>
                            <td class="align-middle text-center">
                                <span class="badge bg-secondary" style="text-transform: capitalize;">
                                    {{categoria}}
                                </span>
                            </td>
                            <td class="align-middle text-center">
                                {{#if img_id}}
                                <span class="badge bg-primary">
                                    <i class="fas fa-cloud me-1"></i>Cloud
                                </span>
                                {{else}}
                                {{#if file}}
                                <span class="badge" style="background-color: var(--slate);">
                                    <i class="fas fa-folder me-1"></i>Local
                                </span>
                                {{else}}
                                <span class="badge bg-light text-dark">
                                    <i class="fas fa-question me-1"></i>N/A
                                </span>
                                {{/if}}
                                {{/if}}
                            </td>
                            <td class="align-middle">
                                <div class="d-flex justify-content-center">
                                    <div class="admin-imagen">{{{imagen}}}</div>
                                </div>
                            </td>
                            <td class="align-middle">
                                <div class="d-flex justify-content-center align-items-center gap-2">
                                    <a href="/galeria/modificar/{{id}}" title="Editar" class="btn btn-sm btn-secondary">
                                        <i class="fa fa-pencil justify-content-center align-items-center"></i>
                                    </a>
                                    <a href="/galeria/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-danger"
                                        onclick="return confirm('¿Estás seguro de eliminar esta imagen?');">
                                        <i class="fa fa-trash "></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            {{#unless galeria}}
            <div class="text-center py-5" style="color: var(--text-muted);">
                <i class="fas fa-image fa-3x mb-3" style="opacity: 0.5;"></i>
                <p>No hay imágenes en la galería</p>
                <a href="/galeria/agregar" class="btn btn-primary mt-2">
                    <i class="fa fa-plus me-2"></i>Agregar primera imagen
                </a>
            </div>
            {{/unless}}
        </div>
    </div>
    {{!-- fin tabla --}}
</div>