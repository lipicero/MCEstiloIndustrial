<div class="container" style="margin-bottom: 3rem;">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card">
                <div class="card-body">
                    <div class="mb-4">
                        <h2>
                            <i class="fas fa-plus-circle me-2" style="color: var(--accent-rust);"></i>
                            Agregar Nueva Imagen
                        </h2>
                        <p style="color: var(--text-muted); margin-bottom: 0;">Completa el formulario para agregar una
                            imagen a la galería</p>
                    </div>

                    {{#if error}}
                    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <div>{{message}}</div>
                    </div>
                    {{/if}}

                    <form action="/galeria/agregar" method="post" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label for="descripcion" class="form-label">
                                <i class="fas fa-align-left me-2"></i>Descripción
                            </label>
                            <input type="text" class="form-control" id="descripcion" name="descripcion"
                                placeholder="Ingresa una descripción de la imagen" required>
                        </div>

                        <div class="mb-4">
                            <label for="categoria" class="form-label">
                                <i class="fas fa-tags me-2"></i>Categoría
                            </label>
                            <select class="form-select" id="categoria" name="categoria" required>
                                <option value="muebles">Muebles</option>
                                <option value="portones">Portones</option>
                                <option value="rejas">Rejas</option>
                                <option value="estructuras">Estructuras</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="imagen" class="form-label">
                                <i class="fas fa-cloud-upload-alt me-2"></i>Seleccionar Imagen
                            </label>
                            <input type="file" class="form-control" id="imagen" name="imagen" accept="image/*" required>
                            <small style="color: var(--text-muted); display: block; margin-top: 0.5rem;">
                                <i class="fas fa-info-circle me-1"></i>
                                Formatos: JPG, PNG, GIF. Tamaño máximo: 5MB
                            </small>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a href="/galeria" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Guardar Imagen
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>